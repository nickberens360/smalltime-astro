---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.vue';
import { getCollection } from 'astro:content';

// Fetch all products from the collection
const allProducts = await getCollection('products');

// Filter products by category
const products = allProducts.filter(product => product.data.category === 'stickers');
---

<Layout title="Stickers | Smalltime Intelligent Streetware" description="Browse our collection of stickers">
    <div class="category-header">
        <h1>Stickers</h1>
        <p>Express yourself with our collection of high-quality stickers</p>
    </div>

    <section class="products-section">
        <div class="product-grid">
            {products.map(product => (
                <ProductCard
                    title={product.data.title}
                    description={product.data.description}
                    imageSrc={product.data.imageSrc}
                />
            ))}
        </div>
    </section>
</Layout>

<style>
    .category-header {
        text-align: center;
        padding: 2rem;
        background-color: #f5f5f5;
        margin-bottom: 2rem;
    }

    .category-header h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .products-section {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
    }

    @media (min-width: 768px) {
        .product-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .product-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }
</style>